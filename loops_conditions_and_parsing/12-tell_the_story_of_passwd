#!/usr/bin/env bash
# This script reads /etc/passwd and tells a story about each user using a specific format.

# Read /etc/passwd line by line using a while loop and IFS to split fields
while IFS=: read -r username password user_id group_id _ home_directory shell; do
  echo "The user $username is part of the $group_id gang, lives in $home_directory and rides $shell. $user_id's place is protected by the passcode $password, more info about the user here: $username"
done < /etc/passwd
